@{
    ViewData["Title"] = "Home Page";
}

<style>
    #particles-js {
        position: fixed;
        width: 100%;
        height: 100%;
        z-index: 0;
        top: 0px;
        left: 0px;
        background-color: #000000;
        background-image: url('');
        background-size: cover;
        background-position: 50% 50%;
        background-repeat: no-repeat;
    }

    .unselectable {
        user-select: none;
        -moz-user-select: none;
        -khtml-user-select: none;
        -webkit-user-select: none;
        -o-user-select: none;
    }

    .layout {
        pointer-events: none;
    }

    .panel {
        position: absolute;
        z-index: 10;
        width: 700px;
        height: 220px;
        background: #eee;
        top: 50%;
        left: 50%;
        margin: -110px 0 0 -100px;
        padding: 20px;
    }

    #center-align-all {
        display: flex;
        justify-content: center;
    }

    .parent {
        padding: 5% 0;
    }

    .child {
        padding: 10% 0;
    }

    .vertical-center {
        margin: 0;
        position: absolute;
        top: 50%;
        -ms-transform: translateY(-50%);
        transform: translateY(-50%);
    }

    .header-class {
        font-size: 80px;
        color: white;
        pointer-events: none;
    }
</style>

<div id="particles-js">
    <canvas class="particles-js-canvas-el" style="width: 100%; height: 100%;"></canvas>
    <row>
        <h1 class="vertical-center col align-self-center unselectable header-class" id="center-align-all">eCTF Platform</h1>
    </row>
</div>
