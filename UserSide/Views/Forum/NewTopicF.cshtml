@{
    ViewData["Title"] = "New Topic";
}
<br />
<div class="container">

    <h2> Create New Topic </h2>

    <form asp-action="NewTopicF">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <div class="form-group">
            <select class="form-control" id="category1">
                <option>Category</option>
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" id="Title1" placeholder="Enter Title Here">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="Content1" placeholder="Enter Content Here" rows="5"></textarea>
        </div>
        @* For files, TBC *@
        <div class="form-group">
            <label for=""></label>
            <input type="file" class="form-control-file" id="File1">
        </div>
        <br />
        <button class="btn btn-primary" asp-area="" asp-controller="Forum" asp-action="Index">Cancel</button> &nbsp;
        <button type="submit" class="btn btn-primary" onclick="checked()">Submit</button>
    </form>
</div>
<br />

<div class="container">
    <a asp-action="Index">Back to Forum Page</a>
</div>

