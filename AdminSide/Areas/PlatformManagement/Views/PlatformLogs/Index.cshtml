@model Amazon.CloudWatchLogs.Model.GetLogEventsResponse
@{
    ViewData["Title"] = "Platform Logs";
}
<div class="row">
    <div class="col-lg-3">
        <partial name="../_MainNav.cshtml" />
    </div>
    <div class="col-lg-9">
        <br />
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="" method="post" class="form-inline">
                    <label class="my-1 mr-2" for="logGroup">Select which component of the platform to view logs for:</label>
                    <select class="custom-select my-1 mr-sm-2" id="Component" name="component">
                        <option value="RDS">SQL Database CPU Usage</option>
                        <option value="PlatformVPCELBA">Platform Load Balancer A Network Flow Log</option>
                        <option value="PlatformVPCELBB">Platform Load Balancer B Network Flow Log</option>
                        <option value="VMVPC">Challenge Network Flow Log</option>
                    </select>
                    <button type="submit" class="btn btn-primary my-1">Retrieve Events</button>
                </form>
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12">
                @if (Model != null)
                {
                    <table id="CWresults" class="table">
                        <thead>
                            <tr>
                                <th>
                                    TimeStamp
                                </th>
                                <th>
                                    Log
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loggedEvent in Model.Events)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => loggedEvent.Timestamp)
                                    </td>
                                    <td>
                                        <div>
                                            @Html.DisplayFor(modelItem => loggedEvent.Message)
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                }
            </div>
        </div>
    </div>
</div>