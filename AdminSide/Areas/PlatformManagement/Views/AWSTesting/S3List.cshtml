@model Amazon.S3.Model.ListBucketsResponse;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <partial name="../_AWSTestingNav.cshtml" />
    </div>
    <div class="col-lg-9" style="margin-top: 25px; margin-bottom: 10%;">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Bucket Name
                            </th>
                            <th>
                                Creation Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bucket in Model.Buckets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => bucket.BucketName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => bucket.CreationDate)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
