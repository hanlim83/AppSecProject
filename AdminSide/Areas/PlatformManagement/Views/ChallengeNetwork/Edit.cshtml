@model AdminSide.Areas.PlatformManagement.Models.Subnet
@{
    ViewData["Title"] = "Challenge Network - Subnets";
}
<h2>Modify</h2>
<h4>Subnet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Exception"])))
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Exception"]
            </div>
        }
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @if (@Model.Type == SubnetType.Extranet)
                    {
                        <option value="Internet">Internet</option>
                        <option value="Extranet" selected>Extranet</option>
                        <option value="Intranet">Intranet</option>
                    }
                    @if (@Model.Type == SubnetType.Internet)
                    {
                        <option value="Internet" selected>Internet</option>
                        <option value="Extranet">Extranet</option>
                        <option value="Intranet">Intranet</option>
                    }
                    @if (@Model.Type == SubnetType.Intranet)
                    {
                        <option value="Internet">Internet</option>
                        <option value="Extranet">Extranet</option>
                        <option value="Intranet" selected>Intranet</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <fieldset disabled>
                <div class="form-group">
                    <label asp-for="IPv4CIDR" class="control-label"></label>
                    <input asp-for="IPv4CIDR" class="form-control" />
                    <span asp-validation-for="IPv4CIDR" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IPv6CIDR" class="control-label"></label>
                    <input asp-for="IPv6CIDR" class="form-control" />
                    <span asp-validation-for="IPv6CIDR" class="text-danger"></span>
                </div>
            </fieldset>
            <input type="hidden" asp-for="IPv4CIDR" />
            <input type="hidden" asp-for="IPv6CIDR" />
            <div class="form-group">
                <input type="submit" value="Update Subnet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger" style="margin-left:10px;">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
