@model Amazon.CloudWatchLogs.Model.GetLogEventsResponse;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3" class="list-group-item">S3</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="EC2VPC" class="list-group-item">EC2 and VPC</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="Cloudwatch" class="list-group-item active">Cloudwatch</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SNS" class="list-group-item">SNS</a>
        </div>
    </div>
    <div class="col-lg-9">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                TimeStamp
                            </th>
                            <th>
                                Message
                            </th>                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loggedEvent in Model.Events)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => loggedEvent.Timestamp)
                            </td>
                            <td>              
                                @Html.DisplayFor(modelItem => loggedEvent.Message)
                            </td>                   
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
