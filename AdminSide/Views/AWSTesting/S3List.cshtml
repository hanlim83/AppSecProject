@model Amazon.S3.Model.ListBucketsResponse;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3List" class="list-group-item active">S3 - List Buckets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3Create" class="list-group-item">S3 - Create Bucket</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="VPCList" class="list-group-item">VPC - List VPC</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="CloudwatchView" class="list-group-item">Cloudwatch - View Events</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SNSSend" class="list-group-item">SNS - Send SMS</a>
        </div>
    </div>
    <div class="col-lg-9">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Bucket Name
                            </th>
                            <th>
                                Creation Date
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bucket in Model.Buckets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => bucket.BucketName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => bucket.CreationDate)
                                </td>                       
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
