@model AdminSide.Models.AWSTestingSubnetFormModel;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3List" class="list-group-item">S3 - List Buckets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3Create" class="list-group-item">S3 - Create Bucket</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="VPCList" class="list-group-item">VPC - List VPC</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SubnetList" class="list-group-item">VPC - List Subnets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SubnetCreate" class="list-group-item active">VPC - Create Subnet</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="CloudwatchView" class="list-group-item">Cloudwatch - View Events</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SNSSend" class="list-group-item">SNS - Send SMS</a>
        </div>
    </div>
    <div class="col-lg-9">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                @if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Exception"])))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Exception"]
                    </div>
                }
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IPCIDR"></label>
                        <input asp-for="IPCIDR" placeholder="Enter IP CIDR" class="form-control" pattern="172.29.[0-9]{1,3}.[0-9]{1,3}"/>
                        <span asp-validation-for="IPCIDR" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Subnet</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
