@model Amazon.EC2.Model.DescribeVpcsResponse;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3List" class="list-group-item">S3 - List Buckets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3Create" class="list-group-item">S3 - Create Bucket</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="VPCList" class="list-group-item active">VPC - List VPC</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="CloudwatchView" class="list-group-item">Cloudwatch - View Events</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SNSSend" class="list-group-item">SNS - Send SMS</a>
        </div>
    </div>
    <div class="col-lg-9">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                CIDR Block
                            </th>
                            <th>
                                VPC State
                            </th>
                            <th>
                                VPC ID
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var VPC in Model.Vpcs)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => VPC.CidrBlock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => VPC.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => VPC.VpcId)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
