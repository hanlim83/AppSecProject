@model Amazon.EC2.Model.DescribeSubnetsResponse;
@{
    ViewData["Title"] = "Testing Page";
}

<div class="row">
    <div class="col-lg-3">
        <div class="list-group">
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3List" class="list-group-item">S3 - List Buckets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="S3Create" class="list-group-item">S3 - Create Bucket</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="EC2List" class="list-group-item">EC2 - List Instances</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="EC2Create" class="list-group-item active">EC2 - Create Instance</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="VPCList" class="list-group-item">VPC - List VPC</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SubnetList" class="list-group-item">VPC - List Subnets</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SubnetCreate" class="list-group-item">VPC - Create Subnet</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="CloudwatchView" class="list-group-item">Cloudwatch - View Events</a>
            <a asp-area="" asp-controller="AWSTesting" asp-action="SNSSend" class="list-group-item">SNS - Send SMS</a>
        </div>
    </div>
    <div class="col-lg-9">
        <h4>Content</h4>
        <div class="row">
            <div class="col-lg-6">
                @if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Exception"])))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Exception"]
                    </div>
                }
                    <form method="post">
                        <div class="form-group">
                            <label for="imageID">Select Image for Instance</label>
                            <select id="imageID" name="imageID" class="form-control" required>
                                <option value="ami-0b84d2c53ad5250c2">Amazon Linux 2</option>
                                <option value="ami-76144b0a">Red Hat Enterprise Linux 7.5</option>
                                <option value="ami-0920c364049458e86">SUSE Linux Enterprise Server 15</option>
                                <option value="ami-0c5199d385b432989">Ubuntu Server 18.04 LTS</option>
                                <option value="ami-0445ed131e600ee03">Microsoft Windows Server 2016 Base</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="subnetID">Select Subnet for Instance</label>
                            <select id="subnetID" name="subnetID" class="form-control" required>
                                @foreach (var subnet in Model.Subnets)
                                {
                                    <option value="@subnet.SubnetId">@subnet.CidrBlock</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create and run instance</button>
                    </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
