@model AdminSide.Models.CategoriesViewModelIEnumerable

@{
    ViewData["Title"] = "Create";
}

<br>
<h4>Competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Competition.CompetitionName" class="control-label"></label>
                <input asp-for="Competition.CompetitionName" class="form-control" />
                <span asp-validation-for="Competition.CompetitionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competition.Status" class="control-label"></label>
                <input asp-for="Competition.Status" class="form-control" />
                <span asp-validation-for="Competition.Status" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="Competition.BucketName" class="control-label"></label>
                <input asp-for="Competition.BucketName" class="form-control" />
                <span asp-validation-for="Competition.BucketName" class="text-danger"></span>
            </div>-->
            <!--Add more fields below on adding different categories-->
            <label>Categories</label>
            <p id="categories"></p>
            <!--<select asp-for="SelectedCategories" asp-items="Model.CategoriesList" id="category" name="category" onChange="OnChange()" class="form-control"></select>-->
            <select asp-for="SelectedCategories" asp-items="Model.CategoriesList" id="category" onChange="OnChange()" class="form-control"></select>
            <br>
            <button type="button" class="btn btn-default">New Category</button>
            <br>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<!--<div>
    <a asp-action="Index">Back to List</a>
</div>-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function OnChange() {
        //var value = document.getElementById("category").value;
        var value = $('#category').val();
        console.log(value);
        for (var i = 0; i < value.length; i++) {
            document.getElementById("categories").innerHTML = value;
        }
    }
</script>