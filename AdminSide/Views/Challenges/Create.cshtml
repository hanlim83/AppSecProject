@model AdminSide.Models.ChallengesViewModelIEnumerable

@{
    ViewData["Title"] = "Create";
}

<br>
<div class="col-md-8 offset-2">
    <h2>Create Challenge</h2>
    <hr>
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Challenge.Name" class="control-label"></label>
            <input asp-for="Challenge.Name" class="form-control" />
            <span asp-validation-for="Challenge.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Challenge.Description" class="control-label"></label>
            <input asp-for="Challenge.Description" class="form-control" />
            <span asp-validation-for="Challenge.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Challenge.Value" class="control-label"></label>
            <input asp-for="Challenge.Value" class="form-control" />
            <span asp-validation-for="Challenge.Value" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Challenge.Flag" class="control-label"></label>
            <input asp-for="Challenge.Flag" class="form-control" />
            <span asp-validation-for="Challenge.Flag" class="text-danger"></span>
        </div>
