@model AdminSide.Models.Challenge

@{
    ViewData["Title"] = "Create";
}

<br>
<div class="container">
    <h2>Create Challenge</h2>
    <hr>
    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Value" class="control-label"></label>
            <input asp-for="Value" class="form-control" />
            <span asp-validation-for="Value" class="text-danger"></span>
            <p>Input value between 1 and 9999. 0 is not allowed as it doesn't make sense for a challenge to have 0 points</p>
        </div>
        <div class="form-group">
            <label asp-for="Flag" class="control-label"></label>
            <input asp-for="Flag" class="form-control" />
            <span asp-validation-for="Flag" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompetitionCategoryID" class="control-label"></label>
            <select asp-for="CompetitionCategoryID" class="form-control" asp-items="@ViewBag.SelectList"></select>
            <span asp-validation-for="CompetitionCategoryID" class="text-danger"></span>
        </div>
        <div>
            <input type="hidden" asp-for="CompetitionID" value="@ViewData["CompetitionID"]">
            <span asp-validation-for="CompetitionID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p>Upload file using this form:</p>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="files" multiple />
                <label class="custom-file-label" id="filename" for="customFile">Choose file</label>
            </div>
        </div>
        <br>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-dark" />
        </div>
    </form>
    <a asp-controller="Challenges" asp-action="Index" asp-route-id="@ViewData["CompetitionID"]"><input type="button" value="Back" class="btn btn btn-primary"></a>
</div>