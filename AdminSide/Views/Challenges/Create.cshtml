            <label asp-for="Challenge.CompetitionCategoryID" class="control-label"></label>
            <select asp-for="Challenge.CompetitionCategoryID" class="form-control" asp-items="ViewBag.SelectList"></select>
            <span asp-validation-for="Challenge.CompetitionCategoryID" class="text-danger"></span>
        </div>
        <div>
            <input type="hidden" asp-for="Challenge.CompetitionID" value="@Model.Competition.ID">
            <span asp-validation-for="Challenge.CompetitionID" class="text-danger"></span>
        </div>
