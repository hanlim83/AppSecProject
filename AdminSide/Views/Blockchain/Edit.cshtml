@model AdminSide.Models.Block

<br>
<div class="container">
    <div>
        <h4>Edit Block</h4>
        <p>For demo purpose only</p>
        <hr />
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input type="hidden" asp-for="ID" value="@Model.ID">
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="TimeStamp" value="@Model.TimeStamp">
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionID" class="control-label"></label>
                <input asp-for="CompetitionID" class="form-control" />
                <span asp-validation-for="CompetitionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamID" class="control-label"></label>
                <input asp-for="TeamID" class="form-control" />
                <span asp-validation-for="TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChallengeID" class="control-label"></label>
                <input asp-for="ChallengeID" class="form-control" />
                <span asp-validation-for="ChallengeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamChallengeID" class="control-label"></label>
                <input asp-for="TeamChallengeID" class="form-control"></input>
                <span asp-validation-for="TeamChallengeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control"></input>
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="PreviousHash" value="@Model.PreviousHash">
                <span asp-validation-for="PreviousHash" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="Hash" value="@Model.Hash">
                <span asp-validation-for="Hash" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="Challenges" asp-action="Index" asp-route-id="@Model.CompetitionID"><input type="button" value="Back" class="btn btn btn-primary"></a>
    </div>
</div>