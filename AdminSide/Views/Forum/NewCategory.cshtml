@model AdminSide.Models.ForumCategory

@{
    ViewData["Title"] = "New Category";
}
<br />
<div class="container">

    <h2> Create New Category </h2>

    @if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Alert"])))
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Invalid Search Input</h4>
            <p>Please search again with different phrasing. This might help to get your result.</p>
            <hr>

        </div>
    }

    <form asp-action="NewCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />
        <div class="form-group">
            <label asp-for="CategoryName" class="control-label">Category Name</label>
            <input asp-for="CategoryName" class="form-control" id="CatgoryName" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="btn btn-outline-primary" />
    </form>
</div>
<br />

<div class="container">
    <a asp-action="CategoryD">Back to Category Details</a>
</div>
