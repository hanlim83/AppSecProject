
@{
    ViewBag.Title = "Index";
}
<br />
<div class="container">
<h2>RSS Feed Reader</h2>
<hr />
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Link</th>
            <th>Description</th>
            <th>Publish Date</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.RSSFeed != null)
        {
            foreach (var item in ViewBag.RSSFeed)
            {
        <tr>
            <td>@item.Title</td>
            <td><a href="@item.Link">@item.Link</a></td>
            <td>@item.Description</td>
            
        </tr>
            }
        }
    </tbody>
</table>  
</div>